service firebase.storage {
  match /b/{bucket}/o {
    // Public read-only assets (if needed), no writes
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // App-managed uploads, require auth for reads/writes
    match /uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default: deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
